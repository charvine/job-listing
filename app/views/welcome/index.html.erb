<!--
       If you want to change #bootstrap-touch-slider id then you have to change Carousel-indicators and Carousel-Control  #bootstrap-touch-slider slide as well
       Slide effect: slide, fade
       Text Align: slide_style_center, slide_style_left, slide_style_right
       Add Text Animation: https://daneden.github.io/animate.css/
       -->


       <div id="bootstrap-touch-slider" class="carousel bs-slider fade  control-round indicators-line" data-ride="carousel"  data-interval="3000" >

           <!-- Indicators -->
           <ol class="carousel-indicators">
               <li data-target="#bootstrap-touch-slider" data-slide-to="0" class="active"></li>
               <li data-target="#bootstrap-touch-slider" data-slide-to="1"></li>
               <li data-target="#bootstrap-touch-slider" data-slide-to="2"></li>
           </ol>

           <!-- Wrapper For Slides -->
           <div class="carousel-inner" role="listbox">

               <!-- Third Slide -->
               <div class="item active">

                                    <!-- Slide Background -->
                                    <img src="/images/06.png" alt="Bootstrap Touch Slider"  class="slide-image"/>
                                    <div class="bs-slider-overlay"></div>
                                    <!-- Slide Text Layer -->
                                    <div class="slide-text-superman slide_style_center" >

                                         <a href="/admin/jobs"  class="btn btn-primary animated fadeIn" >成为战友</a>
                                         <br>
                                         <h1 class="animated fadeIn">你将不再孤独</h1>
                                         <p class="animated fadeInUp">一个人，跑得快；两个人，走得远</p>

                                        <!--a href="http://bootstrapthemes.co/" target="_blank"  class="btn btn-primary" data-animation="animated fadeInDown">select two</a-->
                                    </div>

               </div>
               <!-- End of Slide -->

               <!-- Second Slide -->
               <div class="item">

                   <!-- Slide Background -->
                   <img src="/images/03.jpg" alt="Bootstrap Touch Slider"  class="slide-image"/>
                   <div class="bs-slider-overlay"></div>
                   <!-- Slide Text Layer -->
                   <div class="slide-text slide_style_right">
                       <h1 class="animated lightSpeedIn">获得更多能力</h1>
                       <p class="animated fadeInRight">为智能时代，做好准备</p>
                       <a href="/admin/jobs"  class="btn btn-default fadIn" >不停积累</a>
                       <!--a href="http://bootstrapthemes.co/" target="_blank" class="btn btn-primary" data-animation="animated fadeInRight">select two</a-->
                   </div>
               </div>

               <!-- End of Slide -->

               <!-- Third Slide -->
               <div class="item">
                 <!-- Slide Background -->

                 <img src="/images/05.jpg" alt="Bootstrap Touch Slider"  class="slide-image"/>
                 <div class="bs-slider-overlay"></div>

                 <div class="container">
                     <div class="row">
                         <!-- Slide Text Layer -->
                         <div class="slide-text-3 slide_style_left">
                             <h1 class="animated fadeInDown">找到更好的自己</h1>
                             <p class="animated fadeInUp">每一个时期的你，都有价值</p>
                             <a href="/admin/jobs"  class="btn btn-default" data-animation="animated fadeInLeft">走进未来</a>
                             <!--a href="http://bootstrapthemes.co/" target="_blank"  class="btn btn-primary" data-animation="animated fadeInRight">select two</a-->
                         </div>
                     </div>
                 </div>

               </div>
               <!-- End of Slide -->


           </div><!-- End of Wrapper For Slides -->

           <!-- Left Control -->
           <a class="left carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="prev">
               <span class="fa fa-angle-left" aria-hidden="true"></span>
               <span class="sr-only">Previous</span>
           </a>

           <!-- Right Control -->
           <a class="right carousel-control" href="#bootstrap-touch-slider" role="button" data-slide="next">
               <span class="fa fa-angle-right" aria-hidden="true"></span>
               <span class="sr-only">Next</span>
           </a>

       </div> <!-- End  bootstrap-touch-slider Slider -->
